<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
	<managed-bean>
		<managed-bean-name>orderTrackingController</managed-bean-name>
		<managed-bean-class>com.dbms.project.OrderTrackingController</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>employeeDetailController</managed-bean-name>
		<managed-bean-class>com.dbms.project.EmployeeDetailController</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<display-name>HTML/HomePage.xhtml</display-name>
		<from-view-id>/HTML/HomePage.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>emplDetailsList</from-outcome>
			<to-view-id>/HTML/EmployeeHomePage.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>HTML/HomePage.xhtml</display-name>
		<from-view-id>/HTML/HomePage.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>orderTrackingPage</from-outcome>
			<to-view-id>/HTML/OrderTracking.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>HTML/HomePage.xhtml</display-name>
		<from-view-id>/HTML/HomePage.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>getAllOrders</from-outcome>
			<to-view-id>/HTML/OrderDetails.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>HTML/EmployeeHomePage.xhtml</display-name>
		<from-view-id>/HTML/EmployeeHomePage.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>emplDetailsList</from-outcome>
			<to-view-id>/HTML/OrderDetails.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>HTML/OrderDetails.xhtml</display-name>
		<from-view-id>/HTML/OrderDetails.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>getAllOrders</from-outcome>
			<to-view-id>/HTML/EmployeeHomePage.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>HTML/HomePage.xhtml</display-name>
		<from-view-id>/HTML/HomePage.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>orderTrackingPageCustomer</from-outcome>
			<to-view-id>/HTML/OrderTrackingByCustomer.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>HTML/OrderDetails.xhtml</display-name>
		<from-view-id>/HTML/OrderDetails.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>editOrder</from-outcome>
			<to-view-id>/HTML/UpdateOrder.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>HTML/UpdateOrder.xhtml</display-name>
		<from-view-id>/HTML/UpdateOrder.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>homepage</from-outcome>
			<to-view-id>/HTML/HomePage.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

</faces-config>
